@using MoxControl.Connect.Models.Enums;
@using MoxControl.ViewModels.ImageViewModels;

@model ImageViewModel

<div class="card-body border-top p-9">
    <!--begin::Input group-->
    <div class="row mb-6" id="serverRootPassword">
        <!--begin::Label-->
        <label asp-for="Name" class="col-lg-4 col-form-label required fw-semibold fs-6"></label>
        <!--end::Label-->
        <!--begin::Col-->
        <div class="col-lg-8 fv-row fv-plugins-icon-container">
            <input asp-for="Name" class="form-control form-control-lg form-control-solid" placeholder="название">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <!--end::Col-->
    </div>
    <!--end::Input group-->
    <!--begin::Input group-->
    <div class="row mb-6" id="serverRootPassword">
        <!--begin::Label-->
        <label asp-for="Description" class="col-lg-4 col-form-label fw-semibold fs-6"></label>
        <!--end::Label-->
        <!--begin::Col-->
        <div class="col-lg-8 fv-row fv-plugins-icon-container">
            <input asp-for="Description" class="form-control form-control-lg form-control-solid" placeholder="описание">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <!--end::Col-->
    </div>
    <!--end::Input group-->
    <!--begin::Input group-->
    <div class="row mb-6">
        <!--begin::Label-->
        <label asp-for="StorageMethod" class="col-lg-4 col-form-label  fw-semibold fs-6"></label>
        <!--end::Label-->
        <!--begin::Col-->
        <div class="col-lg-8 fv-row">
            <select id="authorizationSelect" asp-for="StorageMethod" asp-items="@Html.GetEnumSelectList<ImageStorageMethod>()" class="form-control form-control-lg form-control-solid form-select"></select>
            <span asp-validation-for="StorageMethod" class="text-danger"></span>
        </div>
        <!--end::Col-->
    </div>
    <!--end::Input group-->
    <!--begin::Input group-->
    <div class="row mb-6" id="serverRootPassword">
        <!--begin::Label-->
        <label asp-for="ImagePath" class="col-lg-4 col-form-label required fw-semibold fs-6"></label>
        <!--end::Label-->
        <!--begin::Col-->
        <div class="col-lg-8 fv-row fv-plugins-icon-container">
            <input asp-for="ImagePath" class="form-control form-control-lg form-control-solid" placeholder="ссылка">
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>
        <!--end::Col-->
    </div>
    <!--end::Input group-->
</div>
<!--begin::Actions-->
<div class="card-footer d-flex justify-content-end py-6 px-9">
    <button type="submit" class="btn btn-primary">Сохранить</button>
</div>
<!--end::Actions-->